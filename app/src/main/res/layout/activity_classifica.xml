<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >







    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/lblAvalie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="Linha: " />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linha"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/color5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linhaDesc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:text="N O M E D A L I N H A"
            android:textColor="@color/color5"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/lblLotacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:textStyle="italic"
            android:text="Lotação do ônibus" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:max="2"
            android:progress="0"
            android:layout_marginVertical="5dp"
            android:progressDrawable="@color/color3"
            android:thumb="@drawable/logo_circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvVazio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vazio/Confortável"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvParcial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcialmente ocupado"
                android:layout_marginLeft="45dp"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tvLotado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lotado"
                android:layout_marginLeft="55dp"
                android:textSize="12dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/lblAvalieLinha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:textStyle="italic"
            android:text="Classifique sua viagem" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:layout_marginVertical="20dp"
            android:numStars="5"
            android:rating="3.0"
            android:stepSize="1.0" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Avalie" />



    </LinearLayout>
</LinearLayout>